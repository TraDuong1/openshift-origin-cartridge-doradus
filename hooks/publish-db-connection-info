#!/bin/bash

doradus_url="$OPENSHIFT_DORADUS_DB_USERNAME:$OPENSHIFT_DORADUS_DB_PASSWORD@$OPENSHIFT_GEAR_DNS:$OPENSHIFT_DORADUS_DB_PROXY_PORT/"

echo "OPENSHIFT_DORADUS_DB_GEAR_UUID=$OPENSHIFT_GEAR_UUID"
echo "OPENSHIFT_DORADUS_DB_GEAR_DNS=$OPENSHIFT_GEAR_DNS"
echo "OPENSHIFT_DORADUS_DB_USERNAME=$OPENSHIFT_DORADUS_DB_USERNAME"
echo "OPENSHIFT_DORADUS_DB_PASSWORD=$OPENSHIFT_DORADUS_DB_PASSWORD"
echo "OPENSHIFT_DORADUS_DB_HOST=$OPENSHIFT_GEAR_DNS"
echo "OPENSHIFT_DORADUS_DB_PORT=$OPENSHIFT_DORADUS_DB_PROXY_PORT"
echo "OPENSHIFT_DORADUS_DB_URL=$doradus_url"
